{% set currentUrl %}{{ page.url }}{% endset %}
<div class="box nav">
  <div class="wrapper">
    <nav style="display:flex; justify-content:space-between; align-items: baseline; flex-wrap:wrap;">
      <a {% if currentUrl === '/' %} aria-current="page" {% endif %} href="/">Logo Here</a>
      <ul role="list">
        {% for page in collections.pages %}
          <li>
            <a {% if currentUrl === page.url %} aria-current="page" {% endif %} href="{{ page.url }}">
              {{ page.data.title }}
            </a>
          </li>
        {%- endfor %}
      </ul>
    </nav>
  </div>
</div>